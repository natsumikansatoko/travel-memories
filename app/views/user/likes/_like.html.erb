<% if !user_signed_in? %>
  <i>♡</i>
  <%= memory.likes.length %>
<% elsif current_user.liked_by?(memory.id) %>
  <%= link_to memory_like_path(memory, memory.likes), class: "like-link", method: :delete, remote: true do %>
    <i>♥</i>
  <% end %>
  <%= memory.likes.length %>
<% else %>
  <%= link_to memory_likes_path(memory), class: "like-link", method: :post, remote: true do %>
    <i>♡</i>
  <% end %>
  <%= memory.likes.length %>
<% end %>