<div class="container my-4">
  <h2><i class="fas fa-suitcase-rolling"></i><%= @user.name %>さん登録情報編集</h2>
  <div class="row">
    <div class="col">
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <%= f.label :ニックネーム, class: 'col-md-3 col-form-label' %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス, class: 'col-md-3 col-form-label' %>
          <%= f.email_field :email %>
        </div>
        <div class="form-group col-6 max-auto">
          <%= f.submit "保存する", class: 'btn btn-success' %>
        </div>
        <div class="form-group col-6 max-auto">
          <%= link_to "退会手続き", unsubscribe_path, class: "btn btn-danger mx-auto" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>