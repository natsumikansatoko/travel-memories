<div class="container my-4">
  <h2><i class="fas fa-suitcase-rolling"></i>プロフィール編集</h2>
  <div class="row">
    <div class="col">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, class: 'col-md-3 col-form-label' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "ニックネーム" %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: 'col-md-3 col-form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'col-md-3 col-form-label' %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-md-3 col-form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "保存", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= link_to "戻る", user_path(current_user.id), class: "redirect-btn" %>

    </div>
  </div>
</div>
