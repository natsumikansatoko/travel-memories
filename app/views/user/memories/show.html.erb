<div class="container my-4">
  <h2><i class="fas fa-suitcase-rolling"></i>旅の思い出詳細</h2>
  <div class="row">
    <div class="col-lg-4">
      <%= attachment_image_tag @memory, :image, format: 'jpeg', fallback: "noimage.jpeg", size: "300x250" %>
    </div>
    <div class="col-lg-8">
      <table class="table">
        <tr>
          <th class="text_left">旅行先</th>
          <td><%= @memory.district.name %></td>
        </tr>
        <tr>
          <th class="text_left">住所</th>
          <td><%= @memory.address %></td>
        </tr>
        <tr>
          <th class="text_left">ジャンル</th>
          <td><%= @memory.genre.name %></td>
        </tr>
        <tr>
          <th class="text_left">タイトル</th>
          <td><%= @memory.title %></td>
        </tr>
        <tr>
          <th class="text_left">コメント</th>
          <td><%= @memory.body %></td>
        </tr>
        <tr>
          <th class="text_left">評価</th>
          <td id="rate-<%= @memory.id %>"></td>
        </tr>
        <script>
　　　　　  $('#rate-<%= @memory.id %>').raty({
　　　　　    size: 15,
              starOn: '<%= asset_path('star-on.png') %>',
              starOff: '<%= asset_path('star-off.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,
              score: <%= @memory.rate %>
　　　　　  });
　　　　　</script>
      </table>
    </div>
  </div>
</div>